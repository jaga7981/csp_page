{
    "name": "csp-page-root",
    "version": "1.0.0",
    "description": "Root orchestration for CSP Page",
    "scripts": {
        "dev": "concurrently \"npm.cmd run dev --prefix server\" \"npm.cmd run dev --prefix client\"",
        "start": "concurrently \"npm.cmd run start --prefix server\" \"npm.cmd run start --prefix client\"",
        "install-all": "npm.cmd install && npm.cmd install --prefix client && npm.cmd install --prefix server"
    },
    "dependencies": {
        "bcryptjs": "^3.0.3",
        "cors": "^2.8.5",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "google-auth-library": "^10.5.0",
        "jsonwebtoken": "^9.0.3",
        "mongoose": "^7.0.0"
    },
    "devDependencies": {
        "concurrently": "^8.2.0",
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.19",
        "@types/express": "^4.17.17",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^20.0.0",
        "@vercel/node": "^3.0.0",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.0"
    }
}